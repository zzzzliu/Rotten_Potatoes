<% include ../partials/header %>

<div class="container">
    <h1>Add a new comment to <%= movie.name %></h1>
    <form action="/movies/<%= movie._id %>/comments" method="post">

        <div class="form-group">
            <input type="text" class="form-control" placeholder="text" name="comment[text]">
        </div>
        <div class="form-group">
            <input type="range" class="form-control" min="0" max="5" step="0.5" name="comment[rating]">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-large btn-block">submit</button>
        </div>
    </form>
    <a href="/movies/<%= movie._id %>">Go Back</a>
</div>

<% include ../partials/footer %>