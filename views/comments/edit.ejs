<% include ../partials/header %>

<div class="container">
    <h1>Edit Comment</h1>
    <form action="/movies/<%= movieID %>/comments/<%= comment._id %>?_method=PUT" method="post">
        <div class="form-group">
            <textarea class="form-control" name="comment[text]" cols="30" rows="10"><%= comment.text %></textarea>
        </div>
        <div class="form-group">
            <input type="range" class="form-control" min="0" max="5" step="0.5" name="comment[rating]" value="<%= comment.rating %>">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-large btn-block">submit</button>
        </div>
    </form>
    <a href="/movies/<%= movieID%>">Go Back</a>
</div>

<% include ../partials/footer %>