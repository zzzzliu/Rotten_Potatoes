<% include ../partials/header.ejs %>

<div class="container">
    <header class="jumbotron">
        <div>
            <h1>View your favorites</h1>
        </div>
    </header>
    <div class="row">
        <% favorites.forEach(function (favorite) { %>
        <div class="col-md-3">
            <div class="thumbnail">
                <a href="/movies/<%= favorite.id %>"><img src="<%= favorite.poster %>" alt=""></a>
                <div class="caption">
                    <a href="/movies/<%= favorite.id %>"><h4 class="comment-heading-at-userpage"><%= favorite.title %></h4></a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer.ejs %>